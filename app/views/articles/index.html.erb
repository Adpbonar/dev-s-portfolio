<link href="https://fonts.googleapis.com/css?family=Fira+Sans+Extra+Condensed&display=swap" rel="stylesheet">
<br />
<h1 align="center">Read My Articles</h1>
<br />
<% @articles.each do |article| %>
  <div class="col-xs-8 col-xs-offset-2">
   <% if article.published || current_user && current_user == article.user %>
              <% unless article.published %>
                  <h5 style="color: red;">DRAFT</h5>
                <% end %>  
   <div class="well well-lg">
    <div class="article-title">
    <p class="post-title"><%= link_to article.title, article_path(article) %></p>
     <br />
     <center><small class="date-text"><%= article.scheduled_for.strftime("%B %d, %Y") %></small></center>
     <br />
    </div>
    <div class="article-body">
     <p class="post"><%= article.snippet %>...</p>
     <br />
     <p class="more"><%= link_to 'Read more', article_path(article) %></p>
    </div>
   </div>
  </div>
  <br />
  <br />
<% end %>
<% end%>