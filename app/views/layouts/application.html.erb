<!DOCTYPE html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script&display=swap" rel="stylesheet">
    <title>Devan Potter-Bonar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale = 1.0">
    <script src="https://kit.fontawesome.com/1ed4546683.js"></script>
    <%= favicon_link_tag asset_path('favcon.png') %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= javascript_pack_tag 'prism' %>
  </head>

  <body>
<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<body>
  <%= render 'layouts/navigation'%>
  <%= render 'layouts/footer'%>
 
  <button onclick="topFunction()" id="topbtn" title="Go to top"><i class="fas fa-chevron-up"></i></button>


  <%= yield %>
  </body>
</html>
