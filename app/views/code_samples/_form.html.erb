
<%= simple_form_for(@code_sample) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <br />
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :versions %>
    <%= f.input :description, label: 'Description (for Featured Projects)' %>
    <%= f.input :code %>
    <%= f.input :featured, label: 'Feature on homepage?', as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
