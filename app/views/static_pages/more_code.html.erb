    class Deck
      def initialize
        @rank = [*(1..13)]
        @suit = [&quot;Clubs&quot;, &quot;Spades&quot;, &quot;Diamonds&quot;, &quot;Hearts&quot;]
        @cards = []
        @rank.each do |rank|
          @suit.each do |suit|
            @cards &lt;&lt; Card.new(rank, suit)
          end
        end
      end
      def shuffle
        @cards.shuffle!
      end
      def card_dealt
        @cards.each do |card|
          card.card_dealt
        end
      end
      def deal(hand_cards)
        hand_cards.times do
          @cards.shift.card_dealt
        end
      end
    end
    deck = Deck.new
    deck.shuffle
